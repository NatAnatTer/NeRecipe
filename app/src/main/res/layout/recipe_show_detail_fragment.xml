<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.RecipeShowDetailFragment">


        <include
            android:id="@+id/recipe_content_detail"
            layout="@layout/recipe_list_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeStepsListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/recipe_content_detail"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:listitem="@layout/recipe_steps"/>





    </androidx.constraintlayout.widget.ConstraintLayout>